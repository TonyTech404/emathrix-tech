---
import '@fontsource-variable/inter';

// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style is:inline>
  :root {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    --aw-color-primary: rgb(25, 118, 210);
    --aw-color-secondary: rgb(16, 79, 180);
    --aw-color-accent: rgb(103, 58, 183);

    --aw-color-text-heading: rgb(0 0 0);
    --aw-color-text-default: rgb(16 16 16);
    --aw-color-text-muted: rgb(16 16 16 / 66%);
    --aw-color-bg-page: rgb(255 255 255);

    --aw-color-bg-page-dark: rgb(10, 25, 41);

    ::selection {
      background-color: rgb(103, 58, 183, 0.3);
    }
  }

  .dark {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    --aw-color-primary: rgb(64, 150, 255);
    --aw-color-secondary: rgb(45, 128, 223);
    --aw-color-accent: rgb(146, 100, 215);

    --aw-color-text-heading: rgb(247, 248, 248);
    --aw-color-text-default: rgb(229 236 246);
    --aw-color-text-muted: rgb(229 236 246 / 66%);
    --aw-color-bg-page: rgb(10, 25, 41);

    ::selection {
      background-color: rgb(103, 58, 183, 0.7);
      color: white;
    }
  }

  /* Team cards hover effects */
  #team .bg-white.dark\:bg-slate-900.rounded-lg {
    transition: all 0.3s ease;
    cursor: pointer;
  }

  #team .bg-white.dark\:bg-slate-900.rounded-lg:hover {
    transform: translateY(-12px);
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.15);
  }

  .dark #team .bg-white.dark\:bg-slate-900.rounded-lg:hover {
    box-shadow:
      0 12px 24px rgba(0, 0, 0, 0.3),
      0 0 8px rgba(64, 150, 255, 0.5);
  }

  #team .bg-white.dark\:bg-slate-900.rounded-lg img {
    transition: transform 0.5s ease;
  }

  #team .bg-white.dark\:bg-slate-900.rounded-lg:hover img {
    transform: scale(1.05);
  }

  #team .bg-white.dark\:bg-slate-900.rounded-lg:hover h3 {
    color: var(--aw-color-primary);
  }

  /* Social icons animation */
  @keyframes bounce {
    0%,
    100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-5px);
    }
  }

  #team .bg-white.dark\:bg-slate-900.rounded-lg:hover .flex a {
    animation: bounce 1s ease infinite;
  }

  #team .bg-white.dark\:bg-slate-900.rounded-lg:hover .flex a:nth-child(2) {
    animation-delay: 0.2s;
  }

  /* Animation pausing during page load */
  .animation-paused * {
    animation-play-state: paused !important;
    transition: none !important;
    -webkit-animation-play-state: paused !important;
  }
  
  .animation-paused [no-intersect] {
    visibility: hidden !important;
  }
  
  /* Ensure animations play once unpaused */
  html:not(.animation-paused) * {
    animation-play-state: running !important;
    -webkit-animation-play-state: running !important;
  }

  /* Fix for animations across different viewport sizes */
  .consistent-animate {
    opacity: 0;
    transform: translateY(20px);
    transition: opacity 0.5s ease, transform 0.5s ease;
    will-change: opacity, transform;
  }

  .consistent-animate.animate-loaded {
    opacity: 1;
    transform: translateY(0);
  }

  /* Animation delay utility classes */
  .delay-100 { transition-delay: 100ms !important; animation-delay: 100ms !important; }
  .delay-200 { transition-delay: 200ms !important; animation-delay: 200ms !important; }
  .delay-300 { transition-delay: 300ms !important; animation-delay: 300ms !important; }
  .delay-400 { transition-delay: 400ms !important; animation-delay: 400ms !important; }
  .delay-500 { transition-delay: 500ms !important; animation-delay: 500ms !important; }

  /* Force all intersect animations to be consistent */
  [class*="intersect"], 
  [class*="intersect:"] {
    transition-property: all !important;
    transition-duration: 0.5s !important;
    transition-timing-function: cubic-bezier(0.16, 1, 0.3, 1) !important;
    will-change: transform, opacity !important;
  }

  /* Override transitions for elements with no-intersect attribute */
  [no-intersect] {
    opacity: 0 !important;
    transform: translateY(20px) !important;
    transition-delay: 0ms !important;
  }

  /* Fix for mobile/small screen animations */
  @media (max-width: 768px) {
    [class*="intersect"],
    [class*="intersect:"] {
      transition-delay: var(--delay, 200ms) !important;
    }
  }

  /* Make sure all animations use the same base animation */
  .intersect\:fade-up,
  .intersect\:fade-down,
  .intersect\:fade-left,
  .intersect\:fade-right {
    opacity: 1 !important;
    transform: translate(0) !important;
  }

  [no-intersect].intersect\:fade-up {
    transform: translateY(30px) !important;
    opacity: 0 !important;
  }

  [no-intersect].intersect\:fade-down {
    transform: translateY(-30px) !important;
    opacity: 0 !important;
  }

  [no-intersect].intersect\:fade-left {
    transform: translateX(30px) !important;
    opacity: 0 !important;
  }

  [no-intersect].intersect\:fade-right {
    transform: translateX(-30px) !important;
    opacity: 0 !important;
  }
</style>
