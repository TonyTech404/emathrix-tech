---
import '@fontsource-variable/inter';

// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style is:inline>
  :root {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    --aw-color-primary: rgb(25, 118, 210);
    --aw-color-secondary: rgb(16, 79, 180);
    --aw-color-accent: rgb(103, 58, 183);

    --aw-color-text-heading: rgb(0 0 0);
    --aw-color-text-default: rgb(16 16 16);
    --aw-color-text-muted: rgb(16 16 16 / 66%);
    --aw-color-bg-page: rgb(255 255 255);

    --aw-color-bg-page-dark: rgb(10, 25, 41);

    ::selection {
      background-color: rgb(103, 58, 183, 0.3);
    }
  }

  .dark {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    --aw-color-primary: rgb(64, 150, 255);
    --aw-color-secondary: rgb(45, 128, 223);
    --aw-color-accent: rgb(146, 100, 215);

    --aw-color-text-heading: rgb(247, 248, 248);
    --aw-color-text-default: rgb(229 236 246);
    --aw-color-text-muted: rgb(229 236 246 / 66%);
    --aw-color-bg-page: rgb(10, 25, 41);

    ::selection {
      background-color: rgb(103, 58, 183, 0.7);
      color: white;
    }
  }

  /* Team cards hover effects */
  #team .bg-white.dark\:bg-slate-900.rounded-lg {
    transition: all 0.3s ease;
    cursor: pointer;
  }

  #team .bg-white.dark\:bg-slate-900.rounded-lg:hover {
    transform: translateY(-12px);
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.15);
  }

  .dark #team .bg-white.dark\:bg-slate-900.rounded-lg:hover {
    box-shadow:
      0 12px 24px rgba(0, 0, 0, 0.3),
      0 0 8px rgba(64, 150, 255, 0.5);
  }

  #team .bg-white.dark\:bg-slate-900.rounded-lg img {
    transition: transform 0.5s ease;
  }

  #team .bg-white.dark\:bg-slate-900.rounded-lg:hover img {
    transform: scale(1.05);
  }

  #team .bg-white.dark\:bg-slate-900.rounded-lg:hover h3 {
    color: var(--aw-color-primary);
  }

  /* Social icons animation */
  @keyframes bounce {
    0%,
    100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-5px);
    }
  }

  #team .bg-white.dark\:bg-slate-900.rounded-lg:hover .flex a {
    animation: bounce 1s ease infinite;
  }

  #team .bg-white.dark\:bg-slate-900.rounded-lg:hover .flex a:nth-child(2) {
    animation-delay: 0.2s;
  }
</style>
