              xmlns="http://www.w3.org/2000/svg"
              class="h-10 w-10 text-purple-600 dark:text-purple-400"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              fill="none"
              stroke-linecap="round"
              stroke-linejoin="round"
