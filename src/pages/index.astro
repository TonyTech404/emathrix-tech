              <path d="M14 8h.01"></path>
              <path d="M10 8h.01"></path>
              <path d="M12.5 20h-5.5a2 2 0 0 1 -2 -2v-6l3 -3l7 -3l3 2v3"></path>
              <path d="M19 13v3l-3.5 2l-2.5 .5"></path>
              <path d="M13 13h2"></path>
              <path d="M20 11v1h-2"></path>
