---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contact Emathrix Technologies',
  description: 'Reach out to our team for software development services, technical consulting, or support for your existing solutions.'
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Contact Us" title="Let's Discuss Your Project!" />

  <ContactUs
    id="form"
    title="Get in Touch with Our Team"
    subtitle="We're excited to hear about your project needs and explore how Emathrix Technologies can help you achieve your technology goals."
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Name',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email',
      },
      {
        type: 'text',
        name: 'company',
        label: 'Company',
      },
      {
        type: 'tel',
        name: 'phone',
        label: 'Phone (optional)',
      },
    ]}
    textarea={{
      label: 'Project Details',
      placeholder: 'Tell us about your project, requirements, and goals...',
    }}
    disclaimer={{
      label:
        'By submitting this form, you agree to our privacy policy and consent to being contacted regarding your inquiry.',
    }}
    description="Our team typically responds within 24 business hours."
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="How Can We Help You?"
    items={[
      {
        title: 'New Project Inquiries',
        description: `Contact us to discuss your new software development project, technology requirements, and how our team can help bring your vision to life.`,
        icon: 'tabler:bulb',
      },
      {
        title: 'Technical Support',
        description:
          'Existing clients can reach out for technical support, maintenance requests, or questions about your current solutions.',
        icon: 'tabler:code',
      },
      {
        title: 'Partnership Opportunities',
        description:
          'Interested in partnering with Emathrix? Contact us to explore potential collaboration opportunities and strategic alliances.',
        icon: 'tabler:heart-handshake',
      },
      {
        title: 'Phone',
        description: '+1 (555) 123-4567',
        icon: 'tabler:phone',
      },
      {
        title: 'Email',
        description: 'contact@emathrix.com',
        icon: 'tabler:mail',
      },
      {
        title: 'Location',
        description: '123 Tech Plaza, Suite 500, San Francisco, CA 94105',
        icon: 'tabler:map-pin',
      },
    ]}
  />
</Layout>
