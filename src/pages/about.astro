---
import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Hero from '~/components/widgets/Hero.astro';
import Stats from '~/components/widgets/Stats.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'About Emathrix Technologies',
  description: 'Learn about our company history, values, and the talented team behind our innovative technology solutions.',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="About Us"
    image={{
      src: 'https://images.unsplash.com/photo-1552664730-d307ca884978?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Emathrix Technologies Team',
    }}
  >
    <Fragment slot="title">
      Transforming businesses through <br />
      <span class="text-accent dark:text-white highlight">Innovative Technology Solutions</span>
    </Fragment>

    <Fragment slot="subtitle">
      Founded in 2013, Emathrix Technologies has been at the forefront of digital innovation, helping businesses across various industries leverage technology to achieve their goals. Our team of experts combines technical excellence with deep industry knowledge to deliver solutions that drive real business value.
    </Fragment>
  </Hero>

  <!-- Stats Widget ****************** -->

  <Stats
    title="Emathrix by the Numbers"
    stats={[
      { title: 'Projects Completed', amount: '150+' },
      { title: 'Talented Professionals', amount: '25+' },
      { title: 'Client Success Stories', amount: '50+' },
      { title: 'Years in Business', amount: '10+' },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    title="Our Expertise"
    subtitle="At Emathrix Technologies, we specialize in a wide range of technologies and solutions that help businesses navigate the digital landscape and achieve their strategic objectives."
    columns={3}
    isBeforeContent={true}
    items={[
      {
        title: 'Software Development',
        description:
          'Custom application development using the latest technologies and frameworks to create scalable, secure, and high-performance solutions.',
        icon: 'tabler:code',
      },
      {
        title: 'AI & Machine Learning',
        description:
          'Advanced AI solutions that help businesses automate processes, gain insights from data, and create intelligent applications.',
        icon: 'tabler:brain',
      },
      {
        title: 'Cloud Engineering',
        description:
          'Expertise in AWS, Azure, and Google Cloud for designing, deploying, and managing cloud infrastructure that scales with your business.',
        icon: 'tabler:cloud',
      },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    columns={3}
    isAfterContent={true}
    items={[
      {
        title: 'Mobile Development',
        description:
          'Native and cross-platform mobile applications that deliver exceptional user experiences across iOS and Android devices.',
        icon: 'tabler:device-mobile',
      },
      {
        title: 'Web Development',
        description:
          'Modern, responsive, and accessible web applications that engage users and drive business growth.',
        icon: 'tabler:world',
      },
      {
        title: 'DevOps',
        description:
          'Streamlined software delivery through continuous integration, continuous deployment, and infrastructure automation.',
        icon: 'tabler:refresh',
      },
      {
        title: 'UI/UX Design',
        description:
          'User-centered design that combines aesthetics with functionality to create intuitive and engaging digital experiences.',
        icon: 'tabler:palette',
      },
      {
        title: 'Cybersecurity',
        description:
          'Comprehensive security solutions to protect your applications, data, and infrastructure from evolving threats.',
        icon: 'tabler:lock',
      },
      {
        title: 'Data Analytics',
        description:
          'Transform raw data into actionable insights that drive business decisions and strategic planning.',
        icon: 'tabler:chart-pie',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1551434678-e076c223a692?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1740&q=80',
      alt: 'Team collaboration',
    }}
  />

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title="Our Core Values"
    subtitle="Our values guide everything we do at Emathrix Technologies. They define our culture, shape our decisions, and help us deliver exceptional results for our clients."
    items={[
      {
        title: 'Excellence in Everything',
        description:
          'We strive for excellence in every aspect of our work, from code quality to client communication. We believe that attention to detail and commitment to best practices are essential for delivering outstanding results.',
      },
      {
        title: 'Innovation and Continuous Learning',
        description:
          'Technology never stands still, and neither do we. Our team is passionate about continuous learning, exploring new technologies, and finding innovative solutions to complex problems.',
      },
      {
        title: 'Client Partnership',
        description:
          'We view our clients as partners in success. We take the time to understand their business objectives, challenges, and vision to deliver solutions that truly address their needs and exceed expectations.',
      },
    ]}
  />

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title="Our Approach"
    subtitle="We follow a systematic and collaborative approach to ensure project success and deliver solutions that align with our clients' goals and objectives."
    isReversed={true}
    items={[
      {
        title: 'Understand',
        description: 'We begin by deeply understanding your business needs, goals, and challenges to establish a clear project vision.',
        icon: 'tabler:search',
      },
      {
        title: 'Strategize',
        description:
          'We develop a comprehensive strategy and roadmap that outlines how technology can address your specific challenges and achieve your objectives.',
        icon: 'tabler:map',
      },
      {
        title: 'Execute',
        description:
          'Our agile development process ensures transparent communication, regular progress updates, and the flexibility to adapt to changing requirements.',
        icon: 'tabler:code',
      },
      {
        title: 'Support',
        description:
          'We provide ongoing support and maintenance to ensure your technology solutions continue to deliver value long after the initial deployment.',
        icon: 'tabler:lifebuoy',
      },
    ]}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Our Leadership Team"
    tagline="Meet the Team"
    columns={3}
    items={[
      {
        title: 'John Smith',
        description: 'Chief Executive Officer',
        image: {
          src: 'https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=774&q=80',
          alt: 'John Smith',
        },
      },
      {
        title: 'Sarah Johnson',
        description: 'Chief Technology Officer',
        image: {
          src: 'https://images.unsplash.com/photo-1573497019940-1c28c88b4f3e?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=774&q=80',
          alt: 'Sarah Johnson',
        },
      },
      {
        title: 'Michael Chen',
        description: 'Chief Operating Officer',
        image: {
          src: 'https://images.unsplash.com/photo-1500648767791-00dcc994a43e?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=774&q=80',
          alt: 'Michael Chen',
        },
      },
    ]}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Get in Touch"
    tagline="Contact Us"
    columns={2}
    items={[
      {
        title: 'Contact Our Team',
        description:
          'Have questions about our services or want to discuss a potential project? Our team is ready to help you navigate your technology challenges.',
        icon: 'tabler:messages',
        callToAction: {
          text: 'Contact Us',
          href: '/contact',
        },
      },
      {
        title: 'Join Our Team',
        description:
          'Interested in working at Emathrix Technologies? We\'re always looking for talented professionals who share our passion for technology and innovation.',
        icon: 'tabler:users',
        callToAction: {
          text: 'View Careers',
          href: '/careers',
        },
      },
    ]}
  />
</Layout>
